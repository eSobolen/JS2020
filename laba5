<html>
	 <head>
	     <meta charset='utf-8' />
	 </head>
	    <body>
	        <script>
	         var x = parseFloat(prompt('введите число 1 '));
	         var y = parseFloat(prompt('введите число 2 '));
	         var z = parseInt(prompt('выберите: сложение – 1, вычитание – 2, умножение – 3, деление - 4')); 
	         
	         switch (z) {
	         case 1: alert(' ответ ' + (x+y)); break;
	         case 2: alert(' ответ ' + (x-y)); break;
	         case 3: alert(' ответ ' + (x*y)); break;
	         case 4: alert(' ответ ' + (x/y)); break;
	        default: alert(' неверное значение ');
	       } 
	        </script>
	  </body>
	</html>
