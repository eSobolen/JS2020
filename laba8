	            k = 0;
	     for ( i = 0 ; i <= l - 1 ; ++i ){
	         if (str.slice( i , i + 1 ) == " "){
	             k = k + 1
	         } 
	         }
	            s1 = "" ;
	            slovo=str.split(" ");
	         for (i = 0 ; i <= k ; ++i ){
	             l = slovo[i].length;
	             a = slovo[i].indexOf("а");
	             sl = sl + "" + slovo[i].slice(0,а) + "о"
	             }
