	            if(a == -1){
	                alert('Строка введена неверно '); 
	            } else {
	                if (l <= 6 ){
	                     alert('Строка введена неверно ');   
	                } else {
	                    if (d == -1 ){
	                            alert('Строка введена неверно ');    
	                    }
	                      else { 
	                         if (s3.length < 2 ){
	                         alert('Строка введена неверно ');    
	                   }
